<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/navigation_header"
             android:layout_width="match_parent"
             android:layout_height="192dp"
             android:background="@color/colorPrimary" android:weightSum="1">

    <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        <ImageView
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:id="@+id/imageView_navigation_header" android:src="@drawable/smile"
                android:layout_marginLeft="16dp" android:layout_marginTop="16dp"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textView_navigation_header"
                android:textColor="@color/color_fon"
                android:textSize="20dp" android:layout_gravity="right" android:layout_marginTop="128dp"
                android:text="name \n surname"/>
    </TableRow>
</TableLayout>